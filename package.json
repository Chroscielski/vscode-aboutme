{
	"name": "vscode-extension-about-me",
	"displayName": "About Me",
	"description": "Shows a webstie you want to promote when demoing in VSCode status bar",
	"version": "0.0.1",
	"publisher": "HugeServices Dawid Chroscielski",
	"author": {
		"name": "Dawid Chr√≥scielski",
		"url": "https://www.chroscielski.pl"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-extension-samples/issues"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration":[
			{
				"title": "About Me",
				"properties": {
					"aboutMe.title": {
						"type": "string",
						"default": "$(globe) www.chroscielski.pl",
						"description": "Text diplayed in status bar. Possible icons: https://code.visualstudio.com/api/references/icons-in-labels#icon-listing"
					},
					"aboutMe.location": {
						"type": "string",
						"default": "left",
						"enum": ["left", "right"],
						"enumDescriptions": [
						  "Adds a heatmap indicator on the left edge of the gutter blame annotations",
						  "Adds a heatmap indicator on the right edge of the gutter blame annotations"
						]
					},
					"aboutMe.url": {
						"type": "string",
						"default": "https://www.chroscielski.pl",
						"format": "url",
						"description": "TODO"
					}
				}
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.2.2"
	}
}
